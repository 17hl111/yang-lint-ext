{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "YANG-Lint Rule Set",
  "type": "object",
  "required": ["rules"],
  "additionalProperties": false,

  "properties": {
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "description", "severity", "scope", "when"],
        "additionalProperties": false,

        "properties": {
          "id":          { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },

          "severity": {
            "type": "string",
            "enum": ["error", "warning", "info"]
          },

          "scope": {
            "type": "string",
            "enum": ["module-header","import","typedef","status","list","anyxml","augment","choice","container","extension","feature","notification","rpc"]
          },

          "when": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
